---
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="min-h-screen flex flex-col p-4 md:p-8 max-w-4xl mx-auto relative">
        <header class="mb-8 border-b-2 border-terminal-text pb-4 flex justify-between items-end">
            <div>
                <h1 class="text-3xl md:text-5xl font-bold glitch" data-text="DEV_TERMINAL">DEV_TERMINAL</h1>
                <p class="text-sm opacity-80">System.Status: ONLINE</p>
            </div>
            <nav class="flex gap-4 text-xl">
                <a href="/" class="hover:bg-terminal-text hover:text-terminal-bg px-2 py-1">[HOME]</a>
                <a href="/about" class="hover:bg-terminal-text hover:text-terminal-bg px-2 py-1">[BIO]</a>
                <a href="/blog" class="hover:bg-terminal-text hover:text-terminal-bg px-2 py-1">[BLOG]</a>
                <a href="/projects" class="hover:bg-terminal-text hover:text-terminal-bg px-2 py-1">[PROJECTS]</a>
            </nav>
        </header>

		<main class="flex-grow">
			<slot />
		</main>

        <footer class="mt-12 pt-4 border-t border-terminal-dim text-center text-sm opacity-60">
            <p>&copy; {new Date().getFullYear()} // EOF</p>
        </footer>
	</body>
</html>
