---
import Layout from '../../layouts/Layout.astro';
import { createReader } from '@keystatic/core/reader';
import keystaticConfig from '../../../keystatic.config';

const reader = createReader(process.cwd(), keystaticConfig);
const posts = await reader.collections.posts.all();

const sortedPosts = posts.sort((a, b) => {
    const dateA = new Date(a.entry.publishedDate || 0);
    const dateB = new Date(b.entry.publishedDate || 0);
    return dateB.getTime() - dateA.getTime();
});
---

<Layout title="Blog // Dev Terminal">
    <h2 class="text-3xl mb-8 border-b border-terminal-text pb-2 inline-block">> SYSTEM_LOGS</h2>

    <div class="space-y-8">
        {sortedPosts.map(post => (
            <article class="border border-terminal-dim p-4 hover:border-terminal-text transition-colors">
                <header class="mb-4">
                    <div class="flex flex-wrap gap-2 text-sm text-terminal-dim mb-1">
                        <span>[{post.entry.publishedDate}]</span>
                        <span>// LOG_ID: {post.slug}</span>
                    </div>
                    <a href={`/blog/${post.slug}`} class="text-2xl font-bold hover:bg-terminal-text hover:text-terminal-bg px-1">
                        {post.entry.title}
                    </a>
                </header>
                <p class="mb-4 opacity-80">{post.entry.description}</p>
                <a href={`/blog/${post.slug}`} class="text-sm border-b border-dashed border-terminal-text">
                    READ_FULL_LOG >>
                </a>
            </article>
        ))}

        {posts.length === 0 && (
            <p class="text-terminal-dim">No logs found in the database.</p>
        )}
    </div>
</Layout>
